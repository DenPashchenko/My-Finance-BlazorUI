@page "/"

<PageTitle>Home page</PageTitle>

<h1>My Finance</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 mt-3 mx-5">
            <div class="card border-0">
                <img src="img\categories2.png" style="max-width: 210px;" class="card-img-top mx-auto d-block">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Manage the categories of your transactions here.</p>
                    <a href="categories" class="btn btn-outline-primary">Start</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mx-5">
            <div class="card border-0">
                <img src="img\transactions.png" style="max-width: 150px;" class="card-img-top mx-auto d-block">
                <div class="card-body">
                    <h5 class="card-title">Transactions</h5>
                    <p class="card-text">Manage your financial transactions here.</p>
                    <a href="transactions" class="btn btn-outline-primary">Start</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mx-5">
            <div class="card border-0">
                <img src="img\reports.png" style="max-width: 150px;" class="card-img-top mx-auto d-block">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Get the reports for the period of time here.</p>
                    <a href="period_report" class="btn btn-outline-primary">Start</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mx-5">
            <div class="card border-0">
                <img src="img\reports.png" style="max-width: 150px;" class="card-img-top mx-auto d-block">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Get the reports for the specific date here.</p>
                    <a href="date_report" class="btn btn-outline-primary">Start</a>
                </div>
            </div>
        </div>
    </div>
</div>
